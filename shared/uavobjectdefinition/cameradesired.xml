<xml>
	<object name="CameraDesired" singleinstance="true" settings="false">
		<description>Desired camera outputs.  Comes from @ref CameraStabilization module.</description>
		<field name="Roll" units="deg" type="float" elements="1"/>
		<field name="Pitch" units="deg" type="float" elements="1"/>
		<field name="Yaw" units="deg" type="float" elements="1"/>
		<field name="Bearing" units="deg" type="float" elements="1"/>
		<field name="Declination" units="deg" type="float" elements="1"/>
		<access gcs="readwrite" flight="readwrite"/>
		<telemetrygcs acked="false" updatemode="manual" period="0"/>
		<telemetryflight acked="false" updatemode="throttled" period="1000"/>
		<logging updatemode="manual" period="0"/>
	</object>
</xml>
