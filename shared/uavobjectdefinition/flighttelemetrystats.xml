<xml>
    <object name="FlightTelemetryStats" singleinstance="true" settings="false">
        <description>Maintains the telemetry statistics from the flight board.</description>
        <field name="Status" type="enum" elements="1" options="Disconnected,HandshakeReq,HandshakeAck,Connected"/>
        <field name="TxDataRate" units="bytes/sec" type="float" elements="1"/>
        <field name="RxDataRate" units="bytes/sec" type="float" elements="1"/>
        <field name="TxFailures" type="uint32" elements="1"/>
        <field name="RxFailures" type="uint32" elements="1"/>
        <field name="TxRetries" type="uint32" elements="1"/>
        <access gcs="readwrite" flight="readwrite"/>
        <telemetrygcs acked="false" updatemode="manual" period="0"/>
        <telemetryflight acked="false" updatemode="periodic" period="5000"/>
        <logging updatemode="periodic" period="5000"/>
    </object>
</xml>
