<xml>
    <object name="GPSTime" singleinstance="true" settings="false">
        <description>Contains the GPS time from @ref GPSModule.  Required to compute the world magnetic model correctly when setting the home location.</description>
        <field name="Month" units="months" type="int8" elements="1"/>
        <field name="Day" units="days" type="int8" elements="1"/>
        <field name="Year" units="years" type="int16" elements="1"/>
        <field name="Hour" units="hours" type="int8" elements="1"/>
        <field name="Minute" units="mins" type="int8" elements="1"/>
        <field name="Second" units="s" type="int8" elements="1"/>
        <access gcs="readwrite" flight="readwrite"/>
        <telemetrygcs acked="false" updatemode="manual" period="0"/>
        <telemetryflight acked="false" updatemode="throttled" period="10000"/>
        <logging updatemode="periodic" period="30000"/>
    </object>
</xml>
