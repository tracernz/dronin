<xml>
	<object name="HwSparky2" singleinstance="true" settings="true" category="HardwareSettings">
		<description>Selection of optional hardware configurations.</description>

		<field name="RcvrPort" type="enum" elements="1" parent="HwShared.PortTypes"  defaultvalue="Disabled">
			<options>
				<option>Disabled</option>
				<option>DSM</option>
				<option>HoTT SUMD</option>
				<option>HoTT SUMH</option>
				<option>PPM</option>
				<option>S.Bus</option>
				<option>S.Bus Non Inverted</option>
			</options>
		</field>

		<!-- Note that when either serial port is set to telemetry it will block the radio port -->

		<field name="MainPort" type="enum" elements="1" parent="HwShared.PortTypes" defaultvalue="Disabled">
			<options>
				<option>Disabled</option>
				<option>ComBridge</option>
				<option>DebugConsole</option>
				<option>DSM</option>
				<option>FrSKY Sensor Hub</option>
				<option>FrSKY SPort Telemetry</option>
				<option>GPS</option>
				<option>HoTT SUMD</option>
				<option>HoTT SUMH</option>
				<option>HoTT Telemetry</option>
				<option>LighttelemetryTx</option>
				<option>MavLinkTX</option>
				<option>MavLinkTX_GPS_RX</option>
				<option>MSP</option>
				<option>OpenLog</option>
				<option>PicoC</option>
				<option>S.Bus Non Inverted</option>
				<option>Storm32Bgc</option>
				<option>Telemetry</option>
			</options>
		</field>
		<field name="FlexiPort" type="enum" elements="1" parent="HwShared.PortTypes" defaultvalue="Disabled">
			<options>
				<option>Disabled</option>
				<option>ComBridge</option>
				<option>DebugConsole</option>
				<option>DSM</option>
				<option>FrSKY Sensor Hub</option>
				<option>FrSKY SPort Telemetry</option>
				<option>GPS</option>
				<option>I2C</option>
				<option>HoTT SUMD</option>
				<option>HoTT SUMH</option>
				<option>HoTT Telemetry</option>
				<option>LighttelemetryTx</option>
				<option>MavLinkTX</option>
				<option>MavLinkTX_GPS_RX</option>
				<option>MSP</option>
				<option>OpenLog</option>
				<option>PicoC</option>
				<option>S.Bus Non Inverted</option>
				<option>Storm32Bgc</option>
				<option>Telemetry</option>
			</options>
		</field>

		<field name="USB_HIDPort" type="enum" elements="1" parent="HwShared.USB_HIDPort" defaultvalue="USBTelemetry"/>
		<field name="USB_VCPPort" type="enum" elements="1" parent="HwShared.USB_VCPPort" defaultvalue="Disabled"/>

		<field name="DSMxMode" type="enum" elements="1" parent="HwShared.DSMxMode" defaultvalue="Autodetect"/>

		<field name="Radio" type="enum" elements="1" parent="HwShared.RadioPort" defaultvalue="Disabled"/>
		<!-- ID of the coordinator to allow binding to. 0 indicates allow all connections -->
		<field name="CoordID" type="uint32" elements="1" defaultvalue="0"/>

		<!-- radio settings -->
		<field name="MaxRfSpeed" type="enum" elements="1" parent="HwShared.MaxRfSpeed" defaultvalue="64000"/>
		<field name="MaxRfPower" type="enum" elements="1" parent="HwShared.MaxRfPower" defaultvalue="1.25"/>
		<field name="RfBand" type="enum" elements="1" parent="HwShared.RfBand" defaultvalue="BoardDefault"/>
		<field name="MinChannel" type="uint8" elements="1" defaultvalue="0" limits="%BE:0:250"/>
		<field name="MaxChannel" type="uint8" elements="1" defaultvalue="250" limits="%BE:0:250"/>

		<field name="GyroRange" units="deg/s" type="enum" elements="1" options="250,500,1000,2000" defaultvalue="2000"/>
		<field name="AccelRange" units="G" type="enum" elements="1" options="2,4,8,16" defaultvalue="8"/>
		<field name="MPU9250Rate" units="Hz" type="enum" elements="1" options="200,250,333,500,1000" defaultvalue="500"/>
		<field name="MPU9250GyroLPF" units="Hz" type="enum" elements="1" options="184,92,41,20,10,5" defaultvalue="184"/>
		<field name="MPU9250AccelLPF" units="Hz" type="enum" elements="1" options="460,184,92,41,20,10,5" defaultvalue="184"/>

		<field name="VTX_Ch" type="enum" units="MHz" elements="1" defaultvalue="BoscamA1 - 5725">
			<options>
				<option>BoscamA1 - 5725</option>
				<option>BoscamA2 - 5745</option>
				<option>BoscamA3 - 5765</option>
				<option>BoscamA4 - 5785</option>
				<option>BoscamA5 - 5805</option>
				<option>BoscamA6 - 5825</option>
				<option>BoscamA7 - 5845</option>
				<option>BoscamA8 - 5865</option>
				<option>BoscamB1 - 5733</option>
				<option>BoscamB2 - 5752</option>
				<option>BoscamB3 - 5771</option>
				<option>BoscamB4 - 5790</option>
				<option>BoscamB5 - 5809</option>
				<option>BoscamB6 - 5828</option>
				<option>BoscamB7 - 5847</option>
				<option>BoscamB8 - 5866</option>
				<option>BoscamE1 - 5705</option>
				<option>BoscamE2 - 5685</option>
				<option>BoscamE3 - 5665</option>
				<option>BoscamE4 - 5645</option>
				<option>BoscamE5 - 5885</option>
				<option>BoscamE6 - 5905</option>
				<option>BoscamE7 - 5925</option>
				<option>BoscamE8 - 5945</option>
				<option>Airwave1 - 5740</option>
				<option>Airwave2 - 5760</option>
				<option>Airwave3 - 5780</option>
				<option>Airwave4 - 5800</option>
				<option>Airwave5 - 5820</option>
				<option>Airwave6 - 5840</option>
				<option>Airwave7 - 5860</option>
				<option>Airwave8 - 5860</option>
			</options>
		</field>

		<field name="Magnetometer" type="enum" elements="1" options="Disabled,Internal,ExternalI2CFlexiPort,ExternalAuxI2C" defaultvalue="Internal"/>
		<field name="ExtMagOrientation" type="enum" elements="1" parent="HwShared.MagOrientation" defaultvalue="Top0degCW" />

		<access gcs="readwrite" flight="readwrite"/>
		<telemetrygcs acked="true" updatemode="onchange" period="0"/>
		<telemetryflight acked="true" updatemode="onchange" period="0"/>
		<logging updatemode="manual" period="0"/>
    </object>
</xml>
