<xml>
	<object name="LoiterCommand" singleinstance="true" settings="false">
		<description>Requested movement while in loiter mode</description>
		<field name="Pitch" units="deg" type="float" elements="1"/>
		<field name="Roll" units="deg" type="float" elements="1"/>
		<field name="Thrust" type="float" elements="1"/>
		<field name="Frame" type="enum" elements="1" options="Body,Earth" default="Body"/>
		<access gcs="readwrite" flight="readwrite"/>
		<telemetrygcs acked="false" updatemode="manual" period="0"/>
		<telemetryflight acked="false" updatemode="throttled" period="1000"/>
		<logging updatemode="manual" period="0"/>
	</object>
</xml>
